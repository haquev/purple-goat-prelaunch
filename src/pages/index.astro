<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>Purple Goat Studio</title>
<link rel="icon" type="image/svg+xml" href="/favicon.svg">


<!-- font system -->
<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Space+Grotesk:wght@400;600;700&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Kaushan+Script&display=swap" rel="stylesheet">

<style>
*{margin:0;padding:0;box-sizing:border-box}

body{
  background:#070010;
  color:white;
  overflow-x:hidden;
  font-family:"Space Grotesk",sans-serif;
}

/* atmosphere */
body::before{
  content:"";
  position:fixed; inset:0;
  background:
  radial-gradient(circle at 15% 20%, #6f2cff66, transparent 40%),
  radial-gradient(circle at 80% 70%, #ff2cfb44, transparent 45%),
  #070010;
  z-index:-2;
}

body::after{
  content:"";
  position:fixed; inset:0;
  background:url("https://grainy-gradients.vercel.app/noise.svg");
  opacity:.18; z-index:-1;
}

/* floating goat watermark */
.goatMark{
  position:absolute;
  font-size:32vw;
  opacity:.04;
  top:50%; left:50%;
  transform:translate(-50%,-50%) rotate(-10deg);
  animation:float 8s ease-in-out infinite;
}

@keyframes float{
  0%,100%{transform:translate(-50%,-50%) rotate(-10deg)}
  50%{transform:translate(-50%,-52%) rotate(-6deg)}
}

/* HERO */
.hero{
  min-height:100svh;
  display:flex;
  align-items:center;
  justify-content:center;
  text-align:center;
  padding:60px 24px;
}


/* FLUID TYPOGRAPHY */
.logo{
  font-family:"Bebas Neue";
  font-size:clamp(70px,12vw,150px);
  letter-spacing:3px;
  line-height:.9;
  background:linear-gradient(90deg,#f0e6ff,#8a2cff);
  -webkit-background-clip:text;
  -webkit-text-fill-color:transparent;
}

.studio{
  font-family:"Kaushan Script", cursive;
  font-size:clamp(36px,6vw,60px);
  margin-top:-10px;
  letter-spacing:3px;
  color:#e9d5ff;
}

.tag{
  margin-top:14px;
  font-size:clamp(14px,2.5vw,20px);
  letter-spacing:3px;
  opacity:.7;
  text-transform:uppercase;
}

/* COUNTDOWN RESPONSIVE */
.timer{
  margin-top:50px;
  display:flex;
  gap:20px;
  justify-content:center;
  flex-wrap:wrap;
}

.card{
  width:clamp(80px,22vw,120px);
  padding:clamp(14px,3vw,22px);
  border-radius:18px;
  background:rgba(255,255,255,.05);
  backdrop-filter:blur(20px);
  border:1px solid rgba(200,150,255,.25);
  box-shadow:0 0 40px #8a2cff22;
}


.num{
  font-family:"Bebas Neue";
  font-size:clamp(34px,6vw,54px);
  color:#e9d5ff;
}

.label{
  font-size:11px;
  letter-spacing:3px;
  opacity:.6;
}

/* footer signature */
.signature{
  margin-top:40px;
  font-size:clamp(12px,2.5vw,16px);
  letter-spacing:3px;
  opacity:.6;
}

/* MOBILE TWEAKS */
@media (max-width:600px){

  .timer{gap:14px}

 .card{
  width:clamp(90px,22vw,120px);
  padding:18px;
  border-radius:18px;
  background:rgba(255,255,255,.05);
  backdrop-filter:blur(20px);
  border:1px solid rgba(200,150,255,.25);
  box-shadow:0 0 40px #8a2cff22;
}


  .goatMark{display:none}
}

.container{
  width:100%;
  max-width:1100px;
  margin:auto;
}


</style>
</head>

<body>

<div class="goatMark">üêê</div>

<section class="hero">
<div class="container">

  <div class="logo">Purple Goat</div>
  <div class="studio">STUDIO</div>
  <div class="tag">G O A T Arrives Soon</div>

  <div class="timer">
    <div class="card"><div id="d" class="num">0</div><div class="label">DAYS</div></div>
    <div class="card"><div id="h" class="num">0</div><div class="label">HOURS</div></div>
    <div class="card"><div id="m" class="num">0</div><div class="label">MINUTES</div></div>
    <div class="card"><div id="s" class="num">0</div><div class="label">SECONDS</div></div>
  </div>

  <div class="signature">
    PURPLEGOAT.STUDIO WEB LAUNCHING 01¬∑03¬∑2026 <span>üêê</span>
  </div>
</div>
</section>

<script>
const target = new Date("March 1, 2026 00:00:00").getTime();
setInterval(()=>{
  const now = new Date().getTime();
  const diff = target - now;
  document.getElementById("d").innerText=Math.floor(diff/(1000*60*60*24));
  document.getElementById("h").innerText=Math.floor((diff%(1000*60*60*24))/(1000*60*60));
  document.getElementById("m").innerText=Math.floor((diff%(1000*60*60))/(1000*60));
  document.getElementById("s").innerText=Math.floor((diff%(1000*60))/1000);
},1000);
</script>

</body>
</html>
